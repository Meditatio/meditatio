<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="409dp"
android:layout_height="729dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Youtube">
    <include layout = "@layout/toolbar"
        android:id="@+id/toolbar"/>
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginVertical="50dp"/>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer1"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer1"
        app:layout_constraintEnd_toEndOf="@id/youtubePlayer1"
        app:layout_constraintBottom_toBottomOf="@id/youtubePlayer1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video1_meditation_paix"
        android:id= "@+id/miniature1"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation guidée : PAIX INTÉRIEURE 🎧🎙 Cédric Michel"
        android:layout_marginStart="16dp"
        android:id= "@+id/title1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer1" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer2"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video2_meditation_paix"
        android:id= "@+id/miniature2" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation 10 min - Trouver la paix intérieure 🙏🏻"
        android:layout_marginStart="16dp"
        android:id= "@+id/title2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer2" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer3"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video3_meditation_paix"
        android:id= "@+id/miniature3" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation Paix intérieure | Se Libérer et se reconnecter à son être profond"
        android:layout_marginStart="16dp"
        android:id= "@+id/title3"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer3" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer4"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video4_meditation_paix"
        android:id= "@+id/miniature4" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation Paix Intérieure - 10 minutes"
        android:layout_marginStart="16dp"
        android:id= "@+id/title4"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer5"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer4" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer5"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer5"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video5_meditation_paix"
        android:id= "@+id/miniature5" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation Courte | Positivité et Paix Intérieure | Prendre un instant pour soi"
        android:layout_marginStart="16dp"
        android:id= "@+id/title5"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>