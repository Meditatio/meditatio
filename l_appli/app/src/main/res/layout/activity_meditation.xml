<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="409dp"
android:layout_height="729dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="youtubes.Youtube">
    <include layout = "@layout/toolbar"
        android:id="@+id/toolbar2"/>
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer111"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar2"
        android:layout_marginVertical="50dp"/>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer111"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer111"
        app:layout_constraintEnd_toEndOf="@id/youtubePlayer111"
        app:layout_constraintBottom_toBottomOf="@id/youtubePlayer111"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video1_meditation_paix"
        android:id= "@+id/miniature111"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation guidée : PAIX INTÉRIEURE 🎧🎙 Cédric Michel"
        android:layout_marginStart="16dp"
        android:id= "@+id/title111"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer222"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer111" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer222"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer222"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video2_meditation_paix"
        android:id= "@+id/miniature222" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation 10 min - Trouver la paix intérieure 🙏🏻"
        android:layout_marginStart="16dp"
        android:id= "@+id/title222"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer333"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer222" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer333"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer333"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video3_meditation_paix"
        android:id= "@+id/miniature333" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation Paix intérieure | Se Libérer et se reconnecter à son être profond"
        android:layout_marginStart="16dp"
        android:id= "@+id/title333"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer444"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer333" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer444"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer444"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video4_meditation_paix"
        android:id= "@+id/miniature444" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation Paix Intérieure - 10 minutes"
        android:layout_marginStart="16dp"
        android:id= "@+id/title444"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtubePlayer555"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintTop_toBottomOf="@id/youtubePlayer444" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/youtubePlayer555"
        app:layout_constraintStart_toStartOf="@id/youtubePlayer555"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/video5_meditation_paix"
        android:id= "@+id/miniature555" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/youtubePlayer555"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Méditation Courte | Positivité et Paix Intérieure | Prendre un instant pour soi"
        android:layout_marginStart="16dp"
        android:id= "@+id/title555"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>