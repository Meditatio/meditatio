<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Basics">

        <SwitchPreferenceCompat
            app:key="daily_notifications"
            app:defaultValue="true"
            app:title="Enable notifications" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Youtube Player">

        <SwitchPreferenceCompat
            app:key="youtube_in_app"
            app:defaultValue="true"
            app:summary="Click to play videos within the app instead of externally"
            app:title="In-app YouTube player" />


    </PreferenceCategory>

</PreferenceScreen>